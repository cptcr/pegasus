# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_CLIENT_ID=your_client_id_here
DEVELOPER_IDS=["your_discord_user_id"]

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pegasus

# API Configuration (for dashboard integration)
ENABLE_API=true
API_PORT=2000
BOT_API_TOKEN=your_secure_api_token_here
API_TOKEN=your_secure_api_token_here  # Legacy support

# Security
ENCRYPTION_KEY=32_character_encryption_key_here

# Feature Toggles
ENABLE_ECONOMY=true
ENABLE_MODERATION=true
ENABLE_XP=true
ENABLE_TICKETS=true
ENABLE_GIVEAWAYS=true

# External Services (Optional)
STEAM_API_KEY=your_steam_api_key_if_using
SENTRY_DSN=your_sentry_dsn_if_using

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=10

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs