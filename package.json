{
  "name": "pegasus-discord-bot",
  "version": "1.0.0",
  "description": "A comprehensive Discord.js v14 bot with moderation, XP system, tickets, and more",
  "main": "dist/index.js",
  "scripts": {
    "setup": "npm install && npm run db:setup && npm run build",
    "db:setup": "ts-node src/database/migrate.ts",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "node -e \"const fs = require('fs'); const path = require('path'); if (!fs.existsSync('dist/i18n')) fs.mkdirSync('dist/i18n', {recursive: true}); if (fs.existsSync('src/i18n/locales')) fs.cpSync('src/i18n/locales', 'dist/i18n/locales', {recursive: true});\"",
    "start": "node scripts/startup.js",
    "start:prod": "node scripts/startup.js --prod",
    "dev": "ts-node src/index.ts",
    "watch": "nodemon --exec ts-node src/index.ts",
    "migrate": "ts-node src/database/migrate.ts",
    "migrate:rollback": "ts-node src/database/migrate.ts rollback",
    "migrate:status": "ts-node src/database/migrate.ts status",
    "backup": "ts-node src/utils/backup-cli.ts create",
    "restore": "ts-node src/utils/backup-cli.ts restore",
    "typecheck": "tsc --noEmit",
    "start:prod:pm2": "node scripts/startup.js --prod --pm2",
    "start:dev": "node scripts/startup.js --dev",
    "prestart": "node scripts/startup.js --check-only",
    "migrate:prod": "node scripts/startup.js --migrate-only --prod",
    "setup:interactive": "node scripts/startup.js --interactive",
    "health:check": "node scripts/startup.js --check-only --verbose",
    "debug:verbose": "node scripts/startup.js --dev --verbose"
  },
  "keywords": [
    "discord",
    "bot",
    "moderation",
    "xp",
    "tickets",
    "typescript"
  ],
  "author": "cptcr",
  "license": "Apache-2.0",
  "dependencies": {
    "@napi-rs/canvas": "^0.1.52",
    "@types/pg": "^8.11.6",
    "axios": "^1.7.2",
    "discord.js": "^14.15.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.3.1",
    "ms": "^2.1.3",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.14.9",
    "@types/node-cron": "^3.0.11",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}