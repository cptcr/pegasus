# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here                    # Required: Bot token from Discord Developer Portal
DISCORD_CLIENT_ID=your_client_id_here               # Required: Application ID
DISCORD_CLIENT_SECRET=your_client_secret_here       # Optional: For OAuth features

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/pegasus  # Required: PostgreSQL connection string
DB_MAX_CONNECTIONS=20                                # Optional: Maximum database connections (default: 20)
DB_SSL=false                                         # Optional: Enable SSL for database connections

# Security & Access Control
DEVELOPER_IDS=["123456789012345678","987654321098765432"]  # Required: Developer Discord IDs (JSON array)
ENCRYPTION_KEY=your_32_character_encryption_key     # Required: For sensitive data encryption (32 chars)
API_TOKEN=your_api_token_here                       # Required: API authentication token for status endpoint

# Bot Configuration
DEFAULT_LANGUAGE=en                                  # Optional: Default language (en, de, es, fr)
DEFAULT_PREFIX=!                                     # Optional: Legacy prefix for text commands
SUPPORT_SERVER_INVITE=https://discord.gg/vaultscope # Required: Support server invite link

# Rate Limiting
RATE_LIMIT_WINDOW=60000                             # Optional: Rate limit window in ms (default: 60s)
RATE_LIMIT_MAX_REQUESTS=10                          # Optional: Max requests per window (default: 10)
GLOBAL_RATE_LIMIT=1000                              # Optional: Global rate limit per minute

# External APIs (Optional)
STEAM_API_KEY=your_steam_api_key_here               # Optional: For Steam profile commands
WEATHER_API_KEY=your_weather_api_key                # Optional: For weather commands
NEWS_API_KEY=your_news_api_key                      # Optional: For news commands

# Caching & Performance
REDIS_URL=redis://localhost:6379                    # Optional: Redis for caching (recommended for production)
CACHE_TTL=3600                                       # Optional: Default cache TTL in seconds
ENABLE_QUERY_CACHE=true                             # Optional: Enable database query caching

# Logging & Monitoring
LOG_LEVEL=info                                       # Optional: Logging level (debug, info, warn, error)
LOG_FILE_PATH=./logs                                # Optional: Log file directory
SENTRY_DSN=your_sentry_dsn_here                     # Optional: Sentry error tracking
WEBHOOK_ERROR_URL=your_webhook_url                  # Optional: Discord webhook for error notifications
WEBHOOK_AUDIT_URL=your_webhook_url                  # Optional: Discord webhook for audit logs

# API Configuration
API_PORT=2000                                        # Optional: API server port (default: 2000)

# Development Settings
NODE_ENV=development                                 # Required: Environment (development, production, test)
DEBUG_MODE=false                                     # Optional: Enable debug features
MOCK_DISCORD_API=false                              # Optional: Mock Discord API for testing
TEST_GUILD_ID=your_test_guild_id                    # Optional: Guild ID for testing slash commands

# Economy System
ECONOMY_STARTING_BALANCE=1000                        # Optional: Starting balance for new users
ECONOMY_DAILY_REWARD_MIN=100                        # Optional: Minimum daily reward
ECONOMY_DAILY_REWARD_MAX=500                        # Optional: Maximum daily reward
ECONOMY_WORK_COOLDOWN=3600000                       # Optional: Work command cooldown in ms (1 hour)
ECONOMY_ROB_COOLDOWN=86400000                       # Optional: Rob command cooldown in ms (24 hours)

# XP System
XP_MESSAGE_MIN=15                                    # Optional: Minimum XP per message
XP_MESSAGE_MAX=25                                    # Optional: Maximum XP per message
XP_VOICE_PER_MINUTE=20                              # Optional: XP per minute in voice channel
XP_COOLDOWN=60000                                    # Optional: XP cooldown between messages in ms
XP_BOOSTER_MULTIPLIER=1.5                          # Optional: XP multiplier for server boosters

# Moderation System
MAX_WARNINGS_PER_USER=50                            # Optional: Maximum warnings per user
WARNING_EXPIRY_DAYS=90                              # Optional: Days before warnings expire
AUTO_MOD_ENABLED=true                               # Optional: Enable automatic moderation
SPAM_THRESHOLD=5                                     # Optional: Messages within spam window to trigger action
SPAM_WINDOW=10000                                    # Optional: Spam detection window in ms

# Feature Toggles
ENABLE_GIVEAWAYS=true                               # Optional: Enable giveaway system
ENABLE_TICKETS=true                                 # Optional: Enable ticket system
ENABLE_ECONOMY=true                                 # Optional: Enable economy system
ENABLE_XP_SYSTEM=true                               # Optional: Enable XP/leveling system
ENABLE_FUN_COMMANDS=true                            # Optional: Enable fun/entertainment commands
ENABLE_MUSIC=false                                  # Optional: Enable music commands (requires additional setup)